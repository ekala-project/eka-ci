{
  "checks": {
    "nixfmt": {
      "dev_shell": "formatting",
      "command": "nixfmt --check **/*.nix",
      "allow_network": false
    },
    "echo-test": {
      "command": "echo 'Hello from sandboxed check!'",
      "allow_network": false
    },
    "network-test": {
      "dev_shell": "networking",
      "command": "curl -I https://example.com",
      "allow_network": true
    }
  }
}
